{
  "dashboard": {
    "id": null,
    "title": "Content Detection",
    "tags": ["content-detection", "pdf", "pipeline"],
    "timezone": "browser",
    "schemaVersion": 36,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Detection Requests/min",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(content_detection_total[1m]) * 60",
            "legendFormat": "{{content_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "req/m",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Content Type Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "content_detection_total",
            "legendFormat": "{{content_type}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"}
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "targets": [
          {
            "expr": "content_detection_cache_hit_ratio",
            "legendFormat": "Hit Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Detection Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(content_detection_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(content_detection_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Cache Hits/Misses",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(content_detection_cache_hits_total[5m])",
            "legendFormat": "Hits"
          },
          {
            "expr": "rate(content_detection_cache_misses_total[5m])",
            "legendFormat": "Misses"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(content_detection_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0.01}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "File Size Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "content_detection_file_size_bytes_bucket",
            "legendFormat": "{{le}}"
          }
        ],
        "dataFormat": "tsbuckets",
        "heatmap": {},
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Pipeline Stage Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pipeline_stage_duration_seconds_bucket[5m]))",
            "legendFormat": "{{stage}} (p95)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "Total Detections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(content_detection_total)",
            "legendFormat": "Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "Avg Processing Time",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(content_detection_duration_seconds_sum[5m]) / rate(content_detection_duration_seconds_count[5m])",
            "legendFormat": "Avg"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 0
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
