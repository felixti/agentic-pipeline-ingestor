# E2E Test Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# API Configuration
# =============================================================================
E2E_BASE_URL=http://localhost:8001
E2E_API_KEY=test-api-key
E2E_ADMIN_API_KEY=admin-api-key
E2E_VIEWER_API_KEY=viewer-api-key

# Request Configuration
E2E_REQUEST_TIMEOUT=30
E2E_POLL_INTERVAL=2.0
E2E_MAX_POLL_ATTEMPTS=60

# =============================================================================
# External Service Configuration (Optional)
# =============================================================================

# Azure OpenAI
AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key

# Azure Blob Storage
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Cognee
COGNEE_HOST=localhost
COGNEE_PORT=8000
COGNEE_API_KEY=your-cognee-key

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Pinecone
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=your-index

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key

# =============================================================================
# Test Configuration
# =============================================================================

# Performance test settings
PERF_TEST_DURATION_SECONDS=60
PERF_CONCURRENT_REQUESTS=50

# Skip slow tests
SKIP_SLOW_TESTS=false

# Generate reports
GENERATE_HTML_REPORT=true
GENERATE_JUNIT_REPORT=true

# =============================================================================
# Docker Configuration
# =============================================================================

COMPOSE_PROJECT_NAME=pipeline-e2e
DOCKER_DEFAULT_PLATFORM=linux/amd64
