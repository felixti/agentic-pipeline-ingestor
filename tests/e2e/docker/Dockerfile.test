# Dockerfile for E2E Test Runner
# 
# This image is used to run the E2E test suite against a deployed API.
# It includes all necessary dependencies for testing.

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
COPY pyproject.toml uv.lock* ./

# Install uv for fast dependency resolution
RUN pip install uv pytest pytest-asyncio pytest-html httpx

# Install project dependencies
RUN uv pip install --system -e ".[dev]" || pip install -e ".[dev]"

# Install additional test dependencies
RUN pip install \
    pytest-xdist \
    pytest-timeout \
    pytest-rerunfailures \
    pytest-metadata \
    allure-pytest \
    faker \
    factory-boy

# Create reports directory
RUN mkdir -p /reports

# Set environment variables
ENV PYTHONPATH=/app:/tests
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["pytest", "--help"]
